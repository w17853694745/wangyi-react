.HotSearchcontainer
  background white
  .HotSearchwrapper
    width 100%
    padding 0 30px
    box-sizing border-box 
    background white
    .header
      width 100%
      height 90px
      color #999999
      font-size 28px
      line-height 90px  
    .main
      display flex
      flex-wrap wrap 
      background white 
      .main-item
        color #333333
        font-size 24px
        border 2px solid rgba(0,0,0,.3)
        padding 0 15px
        height 47px
        text-align center
        line-height 47px
        border-radius 5px 
        margin 0 32px 32px 0
        &.active
          color #b4282d
          border 2px solid #b4282d