.Popularity
  width 100%
  padding-bottom 20px
  .warper
    width 100%
    .header
      width 100%
      height 90px
      padding 0 30px
      line-height 90px
      font-size 32px
      color #333
      position relative 
      display flex
      justify-content space-between
      box-sizing border-box
      a
        display flex
        font-size 28px
        .icon
          background-image: url(//yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/index-titleArrow-193a1a730c.png)
          background-size 100% 100%
          width 20px
          height 20px
          margin-top 35px
          margin-left 5px
    .main
      margin 0 30px
      box-sizing border-box
      .main-header
        width 100%
        height 280px
        display flex
        background #FEF0DF
        margin-bottom 20px 
        .img
          background url("//yanxuan.nosdn.127.net/3235bc71e70f134b5499316fc74337d4.png") 
          background-size 100% 100%
          width 280px
          height 280px
          img 
            width 280px
            height 280px
        .text
          width 350px
          height 162px
          margin auto auto
          .time
            width 100%
            span
              background white
              border 1px solid red
              padding 0 10px
              margin-bottom 10px
              color red    
              display inline-block
              text-align center
              font-size 12px
              transform scale(.9)
          .info
            font-size 28px
            color #333
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;   
          .info2
            font-size 24px
            color #7F7F7F   
          .price
            color #b4282d
            font-size 28px
      .main-footer
        width 100%
        .popularityList
          display flex
          .item1
            width 216px
            height 353px
            position relative
            margin-right 20px
            .img
              width 216px
              height 216px
              background #f5f5f5
              img 
                width 216px
                height 216px
            .text-header
              color #333    
              .price
                color #b4282d
            .text-footer   
              font-size 20px
              color red
              margin-top 10px
              transform scale(.8)
              position absolute
              left -10px
              bottom 25px
              .discount
                background-image url(//yanxuan.nosdn.127.net/ed89ab4f5ad97ad23257f635a9c2fdbb.png),url(//yanxuan.nosdn.127.net/344655c651a5cf17b7d6096b69be7aba.png),url(//yanxuan.nosdn.127.net/6dcff693a2be08725c1313c7e2390840.png)
                background-repeat: no-repeat,no-repeat,repeat-x
                background-size: auto 100%,auto 100%,100% 100%;
                background-position: left center,right center,center center;
                overflow hidden
                display inline-block
                padding 0 15px
          .item2
            width 216px
            height 353px
            position relative
            margin-right 20px
            .img
              width 216px
              height 216px
              background #f5f5f5
              img 
                width 216px
