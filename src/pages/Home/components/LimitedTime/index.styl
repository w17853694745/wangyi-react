.LimitedTime
  width 100%
  .warper
    width 100%
    .header
      width 100%
      height 90px
      padding 0 30px
      line-height 90px
      font-size 32px
      color #333
      position relative 
      display flex
      justify-content space-between
      box-sizing border-box
      .left
        font-size 32px
        display flex
        .time
          margin-left 20px
          span 
            margin 0 5px 
            color #333
            font-family: PingFangSC-Medium;
            font-size 24px
            &.active
              color #fff
              background #333
              padding 4px
              border-radius 4px 
      a
        display flex
        font-size 28px
        .icon
          background-image: url(//yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/index-titleArrow-193a1a730c.png)
          background-size 100% 100%
          width 20px
          height 20px
          margin-top 35px
          margin-left 5px
    .main
      margin 0 30px
      box-sizing border-box
      .main-header
        width 100%
        height 280px
        display flex
        background #FEF0DF
        margin-bottom 20px 
        .img
          background url("//yanxuan.nosdn.127.net/3235bc71e70f134b5499316fc74337d4.png") 
          background-size 100% 100%
          width 280px
          height 280px
          img 
            width 280px
            height 280px
        .text
          width 350px
          height 162px
          margin auto auto
          .time
            width 100%
            span
              background white
              border 1px solid red
              padding 0 10px
              margin-bottom 10px
              color red    
              display inline-block
              text-align center
              font-size 12px
              transform scale(.9)
          .info
            font-size 28px
            color #333
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;   
          .info2
            font-size 24px
            color #7F7F7F   
          .price
            color #b4282d
            font-size 28px
      .main-footer
        width 100%
        .popularityList
          display flex
          flex-wrap wrap
          .item1
            width 210px
            height 300px
            position relative
            padding-right 20px
            .img
              width 216px
              height 216px
              background #f5f5f5
              img 
                width 216px
                height 216px
            .text-header
              color #333  
              display flex
              height 42px
              text-align center
              line-height 42px  
              margin 15px 0
              .left
                color #b4282d
                font-size 28px
                margin 0 15px
              .right
                color #7f7f7f
                text-decoration line-through