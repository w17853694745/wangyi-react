.NewProducts
  width 100%
  .warper
    width 100%
    .header
      width 100%
      height 90px
      padding 0 30px
      line-height 90px
      font-size 32px
      color #333
      position relative 
      display flex
      justify-content space-between
      box-sizing border-box
      a
        display flex
        font-size 28px
        .icon
          background-image: url(//yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/index-titleArrow-193a1a730c.png)
          background-size 100% 100%
          width 20px
          height 20px
          margin-top 35px
          margin-left 5px
    .main
      margin 0 30px
      box-sizing border-box
      .main-footer
        width 100%
        .popularityList
          display flex
          flex-wrap wrap
          .item1
            width 210px
            height 316px
            position relative
            margin-right 20px
            .img
              width 216px
              height 216px
              background #f5f5f5
              img 
                width 216px
                height 216px
            .text-header
              color #333  
              font-size 24px  
              .price
                margin-left 10px 
                color #b4282d
                font-size 26px 
            .text-footer   
              font-size 20px
              color red
              transform scale(.8)
              .price
                border 2px solid #ff0000
                border-radius 15px 
                display inline-block
                padding 2px 15px  
                position absolute
                left -25px
                top 10px