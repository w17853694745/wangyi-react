@import "../../../../common/stylus/mixins.styl"
.PwdContainer
  width 100%
  padding-top 93px
  .wrapper
    width 100%
    .header 
      width 100%
      height 128px
      padding-top 54px  
      img
        width 192px
        height 64px
        margin 0 auto
    .center
      width 100%
      padding 93px 40px 0
      box-sizing border-box
      form
        width 100%
        .phone
          width 100%
          height 92px
          bottom-border-1px(#e4e4e4)
          position relative
          input
            width 100%
            height 42px
            border: none
            padding 28px 0
            font-size: 28px
          i
            display: inline-block
            width 63px
            height 63px
            background-image: url("data:image/png;base64,")  
            background-size: 26px 26px
            background-repeat: no-repeat
            position: absolute
            right 0
            top 30px
        .pwd
          width 100%
          height 92px
          bottom-border-1px(#e4e4e4)
          input
            width 100%
            height 42px
            border: none
            padding 28px 0
            font-size: 28px 
          i
            display: inline-block
            width 63px
            height 63px
            background-image: url("data:image/png;base64,")  
            background-size: 26px 26px
            background-repeat: no-repeat
            position: absolute
            right 0
            top 30px   
        .reg
          display: inline-block
          margin-top: 20px 
          font-size: 24px
          color: #DD1A21    
        .forget
          width 100%
          display: flex
          justify-content: space-between    
          margin-top: 35px   
          .left
            font-size: 28px
            color: #7F7F7F
          .right
            font-size: 28px
            color: #333  
        .login
          width 100%
          margin-top: 35px 
          button    
            width 100%
            height 92px
            background: #DD1A21
            color: white
            border: none
            border-radius: 10px 
    .footer
      width 100%
      padding-top: 70px      
      text-align: center
      font-size: 28px
      color: #333 
      i
        display: inline-block
        height 28px
        width 28px
        background-image: url(//yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/arrow-right3-8d47138d73.png)
        background-size: 100% 100%
        vertical-align: middle
        margin-left: 5px 
