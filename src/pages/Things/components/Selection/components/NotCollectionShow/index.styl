.not_is_box
  width 345px
  border-radius 15px
  overflow hidden
  margin 0 10px 20px 10px
  box-sizing border-box
  font-size 28px
  background-color #fff
  box-shadow 0 0 3px #333333
  >img
    width 100%
  >p
    width 100%
    margin 30px 0 20px
    line-height 34px
    text-align center
    font-size 24px
    color #333
  >div
    width 100%
    height 60px
    display flex
    justify-content space-between
    align-items center
    .left_info
      height 100%
      display flex
      justify-content space-between
      align-items center
      >img
        width 48px
        height 48px
        margin-left 20px
        border-radius 50%
      >span
        margin-left 20px
        line-height 60px
        font-size 24px
        color #7f7f7f
    .right_info
      height 100%
      display flex
      align-items center
      >span
        margin-right 20px
        background-color: #fff